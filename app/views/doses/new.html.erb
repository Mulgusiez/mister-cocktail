<div class= "container text-center">
  <h1>New Dose for <%= @cocktail.name %></h1>
  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.input :description, placeholder: 'dose ?'%>
    <%= f.association :ingredient, placeholder: 'ingredient ?'%>
    <%= f.button :submit %>
  <% end %>
</div>
