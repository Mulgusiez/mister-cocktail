<div class= "container text-center">
  <div class="page-title">
    <h1><%= @cocktail.name %> ingredients </h1>
  </div>
  <div class="padding-medium main-div">
    <%= simple_form_for [@cocktail, @dose] do |f| %>
      <%= f.input :description, placeholder: 'dose ?'%>
      <%= f.association :ingredient, placeholder: 'ingredient ?'%>
      <%= f.button :submit %>
    <% end %>
  </div>
</div>
