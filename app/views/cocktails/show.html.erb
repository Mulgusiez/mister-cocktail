<div class= "text-center">
  <div class="page-title">
  <h1><%= @cocktail.name %></h1>
  </div>

    <div class="row padding-large main-div">

<!-- div image -->
      <div class= "col-xs-12 col-md-6">
        <% if @cocktail.photo? %>
            <%= cl_image_tag @cocktail.photo.path, width: 200, height: 300, crop: :fill %>
          <% end %>
      </div>

<!-- div name + doses -->
      <div class= "col-xs-12 col-md-6">
        <ul class= "text-left">

          <% @cocktail.doses.each do |dose| %>
            <ul class= "text-left">
              <li>
                <%= dose.description %>
                 of :
                <%= dose.ingredient.name %>
                <%= link_to 'Delete', dose_path(dose), :method => 'delete' %>
              </li>
            </ul>
          <% end %>
        </ul>
        <%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail) %>
      </div>
    </div>
<!-- link delete -->
    <div class="row padding-down-medium" >
      <div class= "col-xs-12">
        <%= link_to 'Delete Cocktail', cocktail_path(@cocktail), class: "btn btn-danger", :method => 'delete', data: { confirm: "Are you sure?" } %>
      </div>
    </div>
</div>
